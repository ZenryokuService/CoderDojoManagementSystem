<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="296.0" prefWidth="633.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jp.zenryoku.doms.coderdojomanagementsystem.NinjaController">
   <children>
      <TableView fx:id="historyTable" prefHeight="238.0" prefWidth="634.0" />
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="574.0">
         <children>
            <Label fx:id="message" prefHeight="54.0" prefWidth="242.0" text="今日は何する？">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
            <TextArea fx:id="taskText" prefHeight="100.0" prefWidth="382.0" promptText="やりたいこと、目標、考え中？">
               <font>
                  <Font size="22.0" />
               </font>
            </TextArea>
         </children>
      </HBox>
      <Button fx:id="kettei" mnemonicParsing="false" onAction="#addTask" text="決定">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
   </children>
</VBox>
